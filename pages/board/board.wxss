.slide swiper {
    height: 400rpx;
}
.slide-image {
    width: 100%;
    height: 100%;
}
.board {
    display: flex;
    flex-direction: column;
    margin-top: 50rpx;
    padding: 40rpx;
}
.board-item {
    flex: 1;
    cursor: pointer;
    border: 1rpx solid #eee;
    margin-top: 30rpx;
    padding: 20rpx;
    position: relative;
}
.board-item text{
  font-size: 30rpx;
}
.board-item image {
    flex: 1;
} 
.board-item image {
    height: 20rpx;
    width: 20rpx;
} 
.images {
    position: absolute;
    right: 20rpx;
    top: 35rpx;
    height: 80rpx;
    width: 80rpx;
}